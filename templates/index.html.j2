<html>
    <header>
        <title>Students VMs</title>
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    </header>
    <body>
        <div class="container mx-auto px-4">
            <table class="table-auto">
                <thead>
                  <tr>
                    <th class="px-4 py-2">Name</th>
                    <th class="px-4 py-2">IP</th>
                  </tr>
                </thead>
                <tbody>
                  {% for host in students_dict %}
                  <tr>
                    <td class="border px-4 py-2">{{ host.name }}</td>
                    <td class="border px-4 py-2">{{ host.ip }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
        </div>
    </body>
</html>